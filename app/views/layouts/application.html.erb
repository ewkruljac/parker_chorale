<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>

  <body>
    <%= render 'layouts/header' %>

    <div class="container bottom-20">
    
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      
      <% if logged_in? %>
        <%= render 'layouts/logged_in_header' %>
      <% end %>

      <%= yield %>

    </div>
    
    <%= render 'layouts/footer' %>
  </body>

</html>
