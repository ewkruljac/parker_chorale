<h1>Add Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@performance, url: events_path, html: { multipart: true }) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :start_date %>
      <%= f.datetime_field :start_date, class: 'form-control' %>

      <%= f.label :end_date %>
      <%= f.datetime_field :end_date, class: 'form-control' %>

      <%= f.label :purchase_link %>
      <%= f.text_field :purchase_link, placeholder: "www.example.com", class: 'form-control' %>

      <%= f.label :event_pic %>
      <%= f.file_field :event_pic, class: 'form-control' %>

      <%= f.label :youtube_link %>
      <%= f.text_field :youtube_link, placeholder: "www.youtube.com/watch?example", class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>