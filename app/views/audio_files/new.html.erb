<h1>Add File</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @performances.blank? %>
      <p>Please create an <%= link_to "Event", "/events" %> before uploading files.</p>
    <% else %>
      <%= form_for(@audio_file,  html: { multipart: true }) do |f| %>

        <%= f.label :performance_id, 'Event' %>
        <%= f.collection_select :performance_id, Performance.all, :id, :title %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :part, 'Description(Soprano, Sheet Music, Movie, etc.)' %>
        <%= f.text_field :part, class: 'form-control' %>

        <%= f.label :mp3, "File To Upload" %>
        <%= f.file_field :mp3, class: 'form-control' %>

        <%= f.submit "Upload", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
