<h1>Add Song</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@audio_file, url: admin_path, html: { multipart: true }) do |f| %>

      <%= f.label :performance_id, 'Event' %>
      <%= f.collection_select :performance_id, Performance.all, :id, :title %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :part %>
      <%= f.select :part, ['Soprano 1', 
                           'Soprano 2',
                           'Alto 1',
                           'Alto 2',
                           'Tenor',
                           'Bass',
                           'Tenor and Bass',
                           'Soprano - Bass Solos',
                           'Full Performance'], class: 'form-control' %>

      <%= f.label :mp3 %>
      <%= f.file_field :mp3, class: 'form-control' %>

      <%= f.submit "Upload", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
